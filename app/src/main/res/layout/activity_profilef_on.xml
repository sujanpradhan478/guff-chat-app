<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".profilef_on"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    style="@style/Register"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/guffleft"
        android:scaleType="fitCenter"
        />

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/gufflogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/guff_logo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="14dp"

            />
        <TextView
            android:id="@+id/logoname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guff"
            android:textSize="42sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/gufflogo"
            android:layout_alignParentBottom="true"
            android:gravity="start"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Welcome!"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/toptext"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_style1"
        android:elevation="3dp"
        android:fontFamily="@font/poppins"
        android:hint="First Name"
        android:paddingLeft="20dp"
        android:translationY="1dp"
        android:translationZ="1dp"
        android:inputType="textEmailAddress"
        android:textColor="#404040"
        android:paddingEnd="10dp"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/firstname"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_style1"
        android:elevation="3dp"
        android:fontFamily="@font/poppins"
        android:hint="Last Name"
        android:paddingLeft="20dp"
        android:translationY="1dp"
        android:translationZ="1dp"
        android:inputType="textEmailAddress"
        android:textColor="#404040"
        android:paddingEnd="10dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lastname"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_style1"
        android:elevation="3dp"
        android:fontFamily="@font/poppins"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:translationY="1dp"
        android:translationZ="1dp"
        android:inputType="textEmailAddress"
        android:textColor="#404040"
        android:paddingEnd="10dp"
        />
    <Button
        android:id="@+id/continue1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:background="@drawable/button_style1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="5dp"
        android:translationZ="2dp"
        android:translationY="2dp"/>
</RelativeLayout>
